
<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center" style="margin-top: 50px">
			<p>Eat This Burger</p>
		</div>
	</div>
	<div class="row">

		<div class="col-lg-12 text-center">
			<img src="https://i.pinimg.com/originals/f3/ab/2b/f3ab2b48a52ec6f75f1016cb593e45f7.jpg" style="width:100px; margin-bottom: 30px">
		</div>			
	</div>
	<div class="row">

		<div class="col-md-4">

			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title"><strong>Burgers</strong></h3>
				</div>
				<div class="panel-body" id="well-section">
						<ul>
						  {{#each burgers}}
							{{#unless devoured}}
								{{> burger-block notDev=true}}
							{{/unless}}
						  {{/each}}
						</ul>
				</div>
			</div>
		</div>
		<div class="col-md-4">

			<form class="create-burger">
			  <div class="form-group">
			    <label for="burger">Burger:</label>
			    <input type="text" class="form-control" id="burger">
			  </div>
		  	  <button type="submit" class="btn btn-default">Submit</button>
			</form>
			<p> Enter the name of a burger you want to eat and hit submit</p>
		</div>

		<div class="col-md-4">

			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title"><strong>Burgers You Ate</strong></h3>
				</div>
				<div class="panel-body" id="well-section">
					<div>
						<ul>
						  {{#each burgers}}
							{{#if devoured}}
								{{> burger-block}}
							{{/if}}
						  {{/each}}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

